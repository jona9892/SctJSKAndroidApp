<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@color/white"
    tools:context="com.example.jonathanspc.sctskapp.UI.OrderDetailActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:background="#f2f2f2"
        android:id="@+id/relativeLayout2">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Ordre Nummer: "
            android:textColor="@color/colorSCTSK"
            android:textSize="20dp"
            android:id="@+id/ordernr"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginLeft="5dp"
            android:layout_above="@+id/textView9" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="1"
            android:textSize="20dp"
            android:id="@+id/txtODorderNr"
            android:layout_alignParentTop="true"
            android:layout_toRightOf="@+id/ordernr"
            android:layout_toEndOf="@+id/ordernr"
            android:textColor="@color/colorAccent" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Ordre dato: "
            android:id="@+id/textView9"
            android:textColor="@color/colorSCTSK"
            android:layout_below="@+id/txtODorderNr"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginLeft="5dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Oprettet dato: "
            android:textColor="@color/colorSCTSK"
            android:id="@+id/textView10"
            android:layout_below="@+id/textView9"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginLeft="5dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="19/12/2016"
            android:id="@+id/txtODOrderDate"
            android:textSize="17dp"
            android:layout_above="@+id/textView10"
            android:layout_toRightOf="@+id/ordernr"
            android:layout_toEndOf="@+id/ordernr"
            android:textColor="@color/colorAccent" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="19/12/2016"
            android:textSize="17dp"
            android:id="@+id/txtODOrderCreated"
            android:layout_alignTop="@+id/textView10"
            android:layout_toRightOf="@+id/ordernr"
            android:layout_toEndOf="@+id/ordernr"
            android:textColor="@color/colorAccent" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Pause: "
            android:id="@+id/textView12"
            android:layout_below="@+id/textView10"
            android:textColor="@color/colorSCTSK"
            android:layout_alignLeft="@+id/textView10"
            android:layout_alignStart="@+id/textView10" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="09:50"
            android:textColor="@color/colorAccent"
            android:id="@+id/txtPause"
            android:layout_below="@+id/txtODOrderCreated"
            android:layout_alignLeft="@+id/txtODOrderCreated"
            android:layout_alignStart="@+id/txtODOrderCreated" />


    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:id="@+id/linearLayout2"
        android:background="@color/colorSCTSK"
        android:layout_alignParentBottom="false"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/rl1">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="total"
            android:id="@+id/txtODTotal"
            android:textSize="20dp"
            android:layout_alignParentBottom="true"
            android:layout_toLeftOf="@+id/textView7"
            android:textColor="@color/colorAccent"
            android:layout_toStartOf="@+id/textView7"
            android:layout_marginRight="5px" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Total:"
            android:id="@+id/textView6"
            android:textSize="20dp"
            android:paddingLeft="10dp"
            android:textColor="@color/white"
            android:layout_alignParentBottom="true"
            android:layout_toLeftOf="@+id/txtCheckTotal"
            android:layout_toStartOf="@+id/txtCheckTotal"
            android:layout_marginRight="10px" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Kr."
            android:textSize="20dp"
            android:id="@+id/textView7"
            android:textColor="@color/colorAccent"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:id="@+id/rl1"
        android:background="#f2f2f2"
        android:layout_below="@+id/relativeLayout2"
        android:layout_height="wrap_content">

        <ListView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:id="@+id/lstOrderDetails"
            android:divider="@color/colorGrey"
            android:dividerHeight="1sp"
            android:layout_margin="6dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

    </RelativeLayout>

</RelativeLayout>
