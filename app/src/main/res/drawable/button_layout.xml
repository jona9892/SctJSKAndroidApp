<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!--The color of button when clicked-->
    <item android:state_pressed="true" >
        <shape android:shape="rectangle"  >
            <corners android:radius="10dip" />
            <stroke android:width="1dip" android:color="#f9f9f9f9" />
            <gradient android:angle="-90" android:startColor="#f9f9f9f9" android:endColor="#f9f9f9f9"  />
        </shape>
    </item>
    <!--The color of button when pressed-->
    <item android:state_focused="true">
        <shape android:shape="rectangle"  >
            <corners android:radius="10dip" />
            <stroke android:width="1dip" android:color="#f9f9f9f9" />
            <solid android:color="#f9f9f9f9"/>
        </shape>
    </item>
    <!--The color of button-->
    <item >
        <shape android:shape="rectangle"  >
            <corners android:radius="10dip" />
            <stroke android:width="1dip" android:color="#d9d9d9" />
            <gradient android:angle="-90" android:startColor="#d9d9d9" android:endColor="#d9d9d9" />
        </shape>
    </item>
</selector>