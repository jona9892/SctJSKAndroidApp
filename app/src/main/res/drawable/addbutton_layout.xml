<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!--The color of button when clicked-->
    <item android:state_pressed="true" >
        <shape android:shape="rectangle"  >
            <corners android:radius="10dip" />
            <stroke android:width="1dip" android:color="#cccccc" />
            <gradient android:angle="-90" android:startColor="#cccccc" android:endColor="#cccccc"  />
        </shape>
    </item>
    <!--The color of button when pressed-->
    <item android:state_focused="true">
        <shape android:shape="rectangle"  >
            <corners android:radius="10dip" />
            <stroke android:width="1dip" android:color="#cccccc" />
            <solid android:color="#cccccc"/>
        </shape>
    </item>
    <!--The color of button-->
    <item >
        <shape android:shape="rectangle"  >
            <corners android:radius="10dip" />
            <stroke android:width="1dip" android:color="#428bca" />
            <gradient android:angle="-90" android:startColor="#428bca" android:endColor="#428bca" />
        </shape>
    </item>
</selector>